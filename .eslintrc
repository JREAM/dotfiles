{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": false
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "array-bracket-newline": [
      0,
      "never"
    ],
    "array-bracket-spacing": [
      2,
      "always"
    ],
    "array-element-newline": 0,
    "arrow-parens": [
      2,
      "always"
    ],
    "brace-style": [
      2,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "comma-dangle": [
      2,
      "only-multiline",
      {
        "functions": "never"
      }
    ],
    "keyword-spacing": [
      2
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "no-unused-vars": 0,
    "object-property-newline": [
      2,
      {
        "allowAllPropertiesOnSameLine": true
      }
    ],
    "padded-blocks": [
      2,
      {
        "classes": "always"
      }
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      1,
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "wrap-iife": [
      2
    ]
  }
}
