{
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["import"],
  "globals": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "impliedStrict": false
    },
    "sourceType": "module"
  },
  "rules": {
    "array-bracket-newline": 0,
    "array-bracket-spacing": [2, "always"],
    "array-element-newline": 0,
    "arrow-parens": [2, "always"],
    "arrow-spacing": 2,
    "brace-style": 0,
    "camelcase": [2, { "properties": "always" }],
    "capitalized-comments": 2,
    "comma-dangle": [2, "only-multiline"],
    "curly": [2, "all"],
    "eol-last": 2,
    "function-paren-newline": [2, "never"],
    "generator-star-spacing": ["error", { "before": false, "after": true }],
    "indent": [2, 2],
    "keyword-spacing": 2,
    "linebreak-style": [2, "unix"],
    "lines-between-class-members": [2, "always"],
    "multiline-comment-style": 0,
    "new-parens": [2, "always"],
    "newline-per-chained-call": 0,
    "no-else-return": [2, "never"],
    "no-extra-semi": 2,
    "no-multi-spaces": 0,
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
    "no-undef-init": 2,
    "no-underscore-dangle": 0,
    "no-var": 2,
    "object-curly-spacing": [2, "always"],
    "object-property-newline": 2,
    "padded-blocks": [2, { "classes": "always" }],
    "prefer-const": 2,
    "prefer-spread": [2, "always"],
    "prefer-template": [2, "always"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "sort-imports": [2, "always"],
    "sort-vars": [2, "always"],
    "space-in-parens": ["error", "always"],
    "wrap-iife": 2,
    "yoda": [2, "never"]
  }
}
