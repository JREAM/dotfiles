function docker-compose-from-container() {
  docker pull ghcr.io/red5d/docker-autocompose:latest
  if [[ -z $1 ]]; then
    echo -e "\n [ START: output single running container ]"
    docker run --rm -v /var/run/docker.sock:/var/run/docker.sock ghcr.io/red5d/docker-autocompose $1
    echo -e "\n [ END: output single running container ]"
  else
    echo -e "\n [ START: output all running containers ]"
    docker run --rm -v /var/run/docker.sock:/var/run/docker.sock ghcr.io/red5d/docker-autocompose $(docker ps -aq)
    echo -e "\n [ END: output all running containers ]"
  fi
}

