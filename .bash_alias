function get_phpversion() {
  echo $(php -r 'echo PHP_MAJOR_VERSION .".". PHP_MINOR_VERSION;')
}

function _reload_php_aliases() {
  VERSION=$(get_phpversion)
  if [ -x "$(command -v php-fpm$VERSION)" ] &>/dev/null; then
    # Get Linux friendly version, eg: 7.4, 8.1
    alias phpfpm-dir='cd /etc/php/$VERSION/'
    alias phpfpm-log='sudo tail -f /var/log/php$VERSION-fpm.log'
    alias phpfpm-stop='sudo service php$VERSION-fpm stop'
    alias phpfpm-reload='sudo service php$VERSION-fpm start'
    alias phpfpm-restart='sudo service php$VERSION-fpm restart'
    alias phpfpm-status='sudo service php$VERSION-fpm status'
  fi
}

# On loading of this script, load the proper php version
if [ -L /usr/bin/php ]; then
  _reload_php_aliases
fi

# Change PHP Version using update-alternatives
# Will affect the composer installation version also
# ** See setup notes at bottom for composer
function phpversion() {
  echo "[!] This updates PHP CLI only, not your webserver."
  if [ -n "$1" ]; then
    if [ -f "/usr/bin/php$1" ]; then
      sudo update-alternatives --set php "/usr/bin/php$1"
    else
      echo "[!] Error: File does not exist at /usr/bin/php$1"
      return 0
    fi
  else
    sudo update-alternatives --config php
  fi

  # This is not working to allow me to update the exported PHP_FPM_VERSION
  # So I call it for the overall Environment, but this script portion does update
  VERSION=$(get_phpversion)
  # Set composer to use the same PHP Version to avoid problems
  # **Assumes installed the way described at bottom
  sudo update-alternatives --set composer "/usr/bin/composer$VERSION"
  echo -e "\n[+] Switched composer to version: /usr/bin/composer$VERSION"
  echo -e "[+] use the $ phpfpm-<commands>\n"
  _reload_php_aliases
}


# ╔═════════════════════════════════════════════════════════════════╗
# ║ Fix apt Legacy Keys                                             ║
# ╚═════════════════════════════════════════════════════════════════╝
# >> Get the Repository file size
function fix-apt-legacy-keys() {
  for KEY in $(apt-key list | grep -E "(([ ]{1,2}(([0-9A-F]{4}))){10})" | tr -d " " | grep -E "([0-9A-F]){8}\b"); do
    K=${KEY:(-8)}
    apt-key export $K | sudo gpg --dearmour -o /etc/apt/trusted.gpg.d/imported-from-trusted-gpg-$K.gpg
  done
}

# ╔═════════════════════════════════════════════════════════════════╗
# ║ Git Alaias (Also see .gitconfig [alias])                        ║
# ╚═════════════════════════════════════════════════════════════════╝
# >> Get the Repository file size
function git-filesize() {
  git rev-list --objects --all |
    git cat-file --batch-check='%(objecttype) %(objectname) %(objectsize) %(rest)' |
    sed -n 's/^blob //p' |
    sort --numeric-sort --key=2 |
    cut -c 1-12,41- |
    $(command -v gnumfmt || echo numfmt) --field=2 --to=iec-i --suffix=B --padding=7 --round=nearest
}

