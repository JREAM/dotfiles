<?xml version="1.0"?>
<ruleset name="JREAM - App">
    <!-- Put this in a projects folder -->
    <description>JREAM - Code Standards for App</description>

    <!-- Show colors in console -->
    <arg value="-colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Use PSR-2 as a base -->
    <rule ref="PSR2"/>

